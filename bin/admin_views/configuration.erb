<h2><%= t.configuration %></h2>

<form action="/configuration" method="post">

  <% @hyde_parameters.each_pair do |setting, value| %>
    <div class="mb-3">
      <label for="i-<%= setting %>" class="form-label"><%= t.send(setting) %></label>
      <input type="text" class="form-control" value="<%= value %>" name="<%= setting %>" id="i-<%= setting %>">
      <div id="i-<%= setting %>-help" class="form-text"><%= t.send("help_#{setting}") %></div>
    </div>
  <% end %>

  <button type="submit" class="btn btn-primary"><%= t.submit %></button>
</form>

