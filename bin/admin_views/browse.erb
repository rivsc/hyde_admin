<h2><%= t.files.capitalize %></h2>

<div class="row g-3">
  <div class="col-auto">
    <form method="post" action="/files/create?dir_path=<%= @dir_path %>">
      <div class="row g-2 align-items-center">
        <div class="col-auto">
          <input type="file" multiple name="files[]" class="form-control">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-plus" title="<%= t.create %>"></i> <%= t.upload %></button>
        </div>
      </div>
    </form>
  </div>
  <div class="col-auto">
  </div>
  <div class="col-auto">
    <form method="post" action="/files/create_dir?dir_path=<%= @dir_path %>">
      <div class="row g-2 align-items-center">
        <div class="col-auto">
          <input type="text" name="directory_name" class="form-control" placeholder="<%= t.directory_input_placeholder %>">
        </div>
        <div class="col-auto">
          <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-plus" title="<%= t.create %>"></i> <%= t.create %></button>
        </div>
      </div>
    </form>
  </div>
</div>

<br>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <tr>
      <th>
        <%= t.file.capitalize %>
      </th>
      <th class="text-center">
        <%= t.edit.capitalize %>
      </th>
      <th class="text-center">
        <%= t.delete.capitalize %>
      </th>
    </tr>
    <% @files.each do |f| %>
      <tr>
        <td>
          <% if File.directory?(f) %>
            <a href="/files/index?dir_path=<%= f %>"><%= f.gsub(File.join(Dir.pwd, ''),'') %></a>
          <% elsif ['.png','.jpg','.webp','.ico','.jpeg','.gif'].include?(File.extname(f).downcase) %>
            <% src_img = f.gsub(Dir.pwd,'') %>
            <a data-fslightbox href="<%= src_img %>">
              <img src="<%= src_img %>" title="<%= f %>" alt="<%= f %>" style="width:10vh;" data-lightbox="image-lb">
            </a>
          <% elsif ['.txt','.xml','.html'].include?(File.extname(f).downcase) %>
            <a href="/files/edit?dir_path=<%= f.gsub(Dir.pwd,'') %>&file=<%= f %>"><%= f.gsub(File.join(Dir.pwd, ''),'') %></a>
          <% else %>
            <%= f.gsub(File.join(Dir.pwd, ''),'') %>
          <% end %>
        </td>
        <td class="text-center">
          <a href="/files/edit?file=<%= f %>&dir_path=<%= @dir_path %>" class="btn btn-default"><i class="fa fa-edit" title="<%= t.edit %>"></i></a>
        </td>
        <td class="text-center">
          <form method="post" action="/files/delete?file=<%= f %>" class="inline">
            <input name="path" type="hidden" value="<%= @dir_path %>">
            <button type="submit" class="btn btn-default"><i class="fa fa-trash" title="<%= t.delete %>"></i></button>
          </form>
        </td>
      </tr>
    <% end %>
  </table>
</div>
   
